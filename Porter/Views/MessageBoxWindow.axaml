<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:vm="using:Porter.ViewModels"
		Width="300" Height="200"
		mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="200"
		x:Class="Porter.Views.MessageBoxWindow"
		Title="MessageBoxWindow"
		SystemDecorations="None"
		Background="Transparent"
		TransparencyLevelHint="Transparent"
		WindowStartupLocation="CenterScreen"
		CanResize="False"
		x:DataType="vm:MessageBoxViewModel">
	<Border CornerRadius="5" Background="#202020">
		<Grid RowDefinitions="Auto,*">
			<Border CornerRadius="5, 5, 0, 0"
					Padding="8"
					Background="#FF333333"
					PointerPressed="OnHeaderPointerPressed">
				<Grid Grid.Row="0"
					  ColumnDefinitions="Auto,5,*,5,Auto"
					  VerticalAlignment="Center">
					<TextBlock Grid.Column="0"
							   Text="{Binding Icon, Converter={StaticResource MessageBoxIconToGlyphConverter}}"
							   Foreground="{Binding Icon, Converter={StaticResource MessageBoxIconToColorConverter}}"
							   FontSize="20"
							   FontFamily="{ StaticResource Phosphor }"/>
					<TextBlock Grid.Column="2"
							   Text="{Binding Title}"
							   VerticalAlignment="Center"/>
					<Button Grid.Column="4"
							Click="OnCloseClick"
							Classes="no-padding content-center"
							Width="{ Binding $parent.Bounds.Height }"
							Height="{ Binding $parent.Bounds.Height }">
						<TextBlock
							Text="&#xE4F6;"
							FontSize="16"
							FontFamily="{ StaticResource Phosphor }"/>
					</Button>
				</Grid>
			</Border>
			<Border Grid.Row="1"
					Padding="20">
				<Grid RowDefinitions="*,Auto">
					<TextBlock Grid.Row="0"
							   Text="{Binding Message}"
							   VerticalAlignment="Center"
							   TextWrapping="Wrap" />
					<Button Grid.Row="1"
							Content="OK"
							HorizontalAlignment="Center"
							VerticalAlignment="Bottom"
							Click="OnOkClick"/>
				</Grid>
			</Border>
		</Grid>
	</Border>
</Window>
